<?xml version="1.0"?>
<robot name="boxbot">
    <link name="base_link">
        <visual>
            <geometry>
                <box size=".2 1 1"/>
            </geometry>
            <material name="translucent">
                <color rgba="1 1 1 .5"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size=".2 1 1"/>
            </geometry>
        </collision>
        <inertial>
			<mass value=".05"/>
			<origin rpy="0 0 0" xyz="0 0 .0375"/>
			<inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
		</inertial>
    </link>

    <link name="wheel">
        <visual>
            <geometry>
                <cylinder length=".02" radius=".3"/>
            </geometry>
            <origin rpy="0 1.570796 0" xyz="0 0 0"/>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
			<geometry>
				<cylinder length=".01" radius=".03"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0 0 0"/>
		</collision>
		<inertial>
			<mass value=".05"/>
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
		</inertial>
    </link>

    <joint name="wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit effort="1.0" velocity="0.5"/>
    </joint>

</robot>
